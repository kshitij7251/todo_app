<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Create New Category</h1>
    <p class="mt-2 text-sm text-gray-700">Add a new category to organize your tasks</p>
  </div>

  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with(model: @category, local: true, class: "space-y-6") do |form| %>
        <% if @category.errors.any? %>
          <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @category.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, 
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "e.g., Work, Personal, Shopping" %>
        </div>

        <div>
          <%= form.label :color, "Color Theme", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-2 grid grid-cols-2 gap-3 sm:grid-cols-4" data-controller="color-picker">
            <% Category::COLORS.each do |color_option| %>
              <label class="relative flex cursor-pointer rounded-lg border-2 p-4 hover:bg-gray-50 focus:outline-none transition-colors
                <%= @category.color == color_option[:value] ? 'border-blue-500 bg-blue-50 ring-2 ring-blue-200' : 'border-gray-300' %>"
                data-color-picker-target="option"
                data-action="click->color-picker#select">
                <%= form.radio_button :color, color_option[:value], 
                    class: "sr-only", 
                    checked: @category.color == color_option[:value] %>
                <span class="flex flex-1">
                  <span class="flex flex-col">
                    <span class="block text-sm font-medium text-gray-900"><%= color_option[:name] %></span>
                    <span class="mt-1 flex items-center text-sm <%= color_option[:value] %> px-2 py-1 rounded">
                      üìÅ Sample
                    </span>
                  </span>
                </span>
                <!-- Selected state checkmark -->
                <span class="checkmark absolute top-2 right-2 flex h-5 w-5 items-center justify-center rounded-full bg-blue-600 
                  <%= @category.color == color_option[:value] ? '' : 'hidden' %>">
                  <svg class="h-3 w-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </span>
                <!-- Unselected state circle -->
                <span class="circle absolute top-2 right-2 flex h-5 w-5 items-center justify-center rounded-full border-2 border-gray-300
                  <%= @category.color == color_option[:value] ? 'hidden' : '' %>">
                </span>
              </label>
            <% end %>
          </div>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", categories_path, 
              class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= form.submit "Create Category", 
              class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "‚Üê Back to categories", categories_path, 
        class: "text-blue-600 hover:text-blue-500 font-medium" %>
  </div>
</div>
