<div class="min-h-screen py-8">
  <div class="max-w-7xl mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-sm">
    <!-- Header -->
    <div class="px-6 py-5 border-b border-gray-100 dark:border-gray-700">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-2xl font-semibold text-gray-900 dark:text-white"><%= @task.title %></h1>
        <div class="flex items-center space-x-3">
          <%= link_to edit_task_path(@task), 
              class: "p-2 text-gray-500 hover:text-indigo-600 dark:text-gray-400 dark:hover:text-indigo-400 transition-colors" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          <% end %>

          <%= button_to task_path(@task),
              method: :delete,
              class: "p-2 text-gray-500 hover:text-red-600 dark:text-gray-400 dark:hover:text-red-400 transition-colors",
              form: { data: { turbo_confirm: "Are you sure? This will delete this task and all its subtasks." } } do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          <% end %>
        </div>
      </div>

      <div class="flex flex-wrap gap-3 text-sm">
        <span class="inline-flex items-center px-3 py-1 rounded-full <%= @task.completed? ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' : 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300' %>">
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <%= @task.completed? ? 
              '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>'.html_safe :
              '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>'.html_safe %>
          </svg>
          <%= @task.completed? ? 'Completed' : 'In Progress' %>
        </span>
        
        <% if @task.category.present? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
            <%= @task.category.name %>
          </span>
        <% end %>
        
        <% if @task.priority.present? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full <%= {
            'high' => 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300',
            'medium' => 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300',
            'low' => 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
          }[@task.priority.downcase] %>">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            <%= @task.priority.capitalize %>
          </span>
        <% end %>

        <% if @task.due_date.present? %>
          <span class="inline-flex items-center px-3 py-1 rounded-full <%= @task.overdue? ? 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300' : 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300' %>">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            Due <%= @task.due_date.strftime("%b %d, %Y") %>
            <%= "• Overdue" if @task.overdue? %>
            <%= "• Today" if @task.due_today? %>
          </span>
        <% end %>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <!-- Description -->
      <% if @task.description.present? %>
        <div class="prose dark:prose-invert max-w-none">
          <h2 class="text-base font-semibold text-gray-900 dark:text-white mb-3">Description</h2>
          <div class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">
            <%= simple_format(@task.description) %>
          </div>
        </div>
      <% end %>

      <!-- Attachments -->
      <% if @task.attachments.attached? %>
        <div>
          <h2 class="text-base font-semibold text-gray-900 dark:text-white mb-3">Attachments</h2>
          <div class="space-y-2">
            <% @task.attachments.each do |attachment| %>
              <div class="flex items-center p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 dark:text-white truncate">
                    <%= attachment.filename %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <%= number_to_human_size(attachment.byte_size) %>
                  </p>
                </div>
                <%= link_to rails_blob_path(attachment, disposition: "attachment"),
                    class: "flex-shrink-0 p-2 text-gray-500 hover:text-indigo-600 dark:text-gray-400 dark:hover:text-indigo-400 transition-colors",
                    title: "Download" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                  </svg>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Subtasks -->
      <div data-controller="subtask-form">
        <div class="flex items-center justify-between mb-3">
          <h2 class="text-base font-semibold text-gray-900 dark:text-white flex items-center">
            Subtasks
            <% if @task.has_subtasks? %>
              <span class="ml-2 px-2 py-0.5 text-xs font-medium rounded-full bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300">
                <%= @task.completed_subtasks_count %>/<%= @task.subtasks_count %>
              </span>
            <% end %>
          </h2>
          <button type="button"
              class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-indigo-700 bg-indigo-100 hover:bg-indigo-200 dark:text-indigo-400 dark:bg-indigo-900/50 dark:hover:bg-indigo-900 rounded-full transition-colors"
              data-action="click->subtask-form#toggle">
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Add subtask
          </button>
        </div>

        <div class="hidden mb-4" data-subtask-form-target="form">
          <%= render 'subtasks/form' %>
        </div>

        <div class="space-y-2">
          <% if @task.subtasks.any? %>
            <% @task.subtasks.order(:created_at).each do |subtask| %>
              <div class="flex items-center gap-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg group">
                <%= button_to toggle_task_subtask_path(@task, subtask), method: :patch,
                    class: "flex-none" do %>
                  <div class="w-5 h-5 rounded-full border-2 <%= subtask.completed? ? 'border-green-500 bg-green-500' : 'border-gray-300 dark:border-gray-500' %> flex items-center justify-center transition-colors">
                    <% if subtask.completed? %>
                      <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    <% end %>
                  </div>
                <% end %>

                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 dark:text-white <%= 'line-through opacity-60' if subtask.completed? %>">
                    <%= subtask.title %>
                  </p>
                  <% if subtask.description.present? %>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-0.5 <%= 'line-through opacity-60' if subtask.completed? %>">
                      <%= subtask.description %>
                    </p>
                  <% end %>
                </div>

                <%= button_to task_subtask_path(@task, subtask),
                    method: :delete,
                    class: "flex-none opacity-0 group-hover:opacity-100 transition-opacity",
                    form: { data: { turbo_confirm: "Delete this subtask?" } } do %>
                  <div class="p-1 text-gray-400 hover:text-red-600 dark:text-gray-500 dark:hover:text-red-400">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-8">
              <svg class="mx-auto h-12 w-12 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              <p class="mt-4 text-sm text-gray-500 dark:text-gray-400">
                No subtasks yet
              </p>
              <button type="button"
                  class="mt-2 text-sm font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300"
                  data-action="click->subtask-form#toggle">
                Add your first subtask
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <div class="px-6 py-4 bg-gray-50 dark:bg-gray-700/50 rounded-b-lg border-t border-gray-100 dark:border-gray-700 flex items-center justify-between">
      <%= link_to tasks_path,
          class: "inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white dark:bg-gray-800 dark:text-gray-300 rounded-lg border border-gray-300 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to tasks
      <% end %>

      <%= button_to toggle_task_path(@task),
          method: :patch,
          class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-lg transition-colors #{
            @task.completed? ? 
            'text-yellow-700 bg-yellow-100 hover:bg-yellow-200 dark:text-yellow-400 dark:bg-yellow-900/50 dark:hover:bg-yellow-900' :
            'text-green-700 bg-green-100 hover:bg-green-200 dark:text-green-400 dark:bg-green-900/50 dark:hover:bg-green-900'
          }" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <%= @task.completed? ?
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>'.html_safe :
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>'.html_safe
          %>
        </svg>
        <%= @task.completed? ? 'Mark as pending' : 'Mark as completed' %>
      <% end %>
    </div>
  </div>
</div>
